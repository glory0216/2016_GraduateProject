<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>PLEASE LOGIN TO APP</h3>
                <small>This is the best app ever!</small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                        <form action="<c:url value="/loginProcess.do" />" id="loginForm" method="post" accept-charset="UTF-8">
                            <div class="form-group">
                                <label class="control-label" for="username">ID</label>
                                <input type="text" placeholder="Your ID" title="Please enter ID" required="" value="" name="id" id="userid" class="form-control">
                                <span class="help-block small">ID를 입력하세요</span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Password</label>
                                <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="pw" id="password" class="form-control">
                                <span class="help-block small">비밀번호를 입력하세요</span>
                            </div>
                            <button class="btn btn-success btn-block">Login</button>
                            <a class="btn btn-default btn-block" href="<c:url value="/openRegisterPage.do" />">Register</a>
                        </form>
                </div>
            </div>
        </div>
    </div>
